<form action="/tasks" method="post" accept-charset="utf-8">
  <!-- SPECIAL INPUT TO ALLOW RAILS TO USE THIS FORM -->
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <p>
  <label for="title">Title</label>
  <input type="text" name="title" value="" id="title">
  </p>

  <p>
  <label for="description">Description</label>
  <!-- <input type="text" name="description" value="" id="description"> -->
  <textarea></textarea id="description">
  </p>

  <p>
    <label for="owner">Task Owner</label>
    <input type="text" name="owner" value="" id="owner">
  </p>

  <label for="completion_date">Date (if completed)</label>
  <input type="date" name="completion_date" value="" id="completion_date">

  <input type="submit" value="Submit">
</form>
<p>
  <%= link_to "Back to all tasks", "/tasks", class: "" %>
</p>
<p>
  <%= link_to "Get back to tasks view", tasks_path %>
</p>
