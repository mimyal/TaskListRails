<h1>All Tasks Are Belong To Us</h1>
<p>
  <a href="https://github.com/mimyal/TaskListRails/blob/master/README.md">ReadMe</a>
</p>
<p>
  Let's add more tasks <a href="/tasks/new" >here</a>!

</p>

<!-- <%= @task_entries %> -->


<% @task_entries.each do |entry| %>
<h3><%= link_to "#{entry.title}", task_path(entry) %></h3>
<p>
  <%= short_time(entry) %>
  <%= button_to "COMPLETE", completed_task_path(entry), :method => "patch" %>
  <%= link_to "Edit", edit_task_path(entry.id) %>
</p>
<p>
  <%= link_to "Delete with confirmation", task_path(entry), method: :delete, data: { confirm: "Are you sure that this task must be deleted?" }%>
</p>

<% end %>
